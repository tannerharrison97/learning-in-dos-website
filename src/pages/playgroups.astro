---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allGroups = await getCollection('playgroups');
const activeGroups = allGroups.filter(group => group.data.active);
---

<Layout title="Play Groups">
  <section class="page-header">
    <div class="container">
      <h1>üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Play Groups</h1>
      <p>Connect with other families raising bilingual kids! Our play groups are relaxed, welcoming spaces where kids play and parents practice Spanish together.</p>
    </div>
  </section>

  <section class="groups-section">
    <div class="container">
      {activeGroups.length === 0 ? (
        <p class="no-groups">No active play groups at the moment. Check back soon!</p>
      ) : (
        <div class="groups-list">
          {activeGroups.map((group) => (
            <div class="group-card card">
              <div class="group-header">
                <h2>{group.data.name}</h2>
                <span class="age-badge">{group.data.ageRange}</span>
              </div>
              
              <p class="group-description">{group.data.description}</p>
              
              <div class="group-details">
                <div class="detail">
                  <span class="detail-icon">üìÖ</span>
                  <span>{group.data.schedule}</span>
                </div>
                <div class="detail">
                  <span class="detail-icon">üìç</span>
                  <span>{group.data.location}</span>
                </div>
              </div>

              {group.data.nextMeetup && (
                <div class="next-meetup">
                  <h3>Next Meetup</h3>
                  <p class="meetup-date">{group.data.nextMeetup}</p>
                  {group.data.nextMeetupNotes && (
                    <p class="meetup-notes">{group.data.nextMeetupNotes}</p>
                  )}
                </div>
              )}

              <div class="group-join">
                <h3>Want to join?</h3>
                {group.data.whatsappLink && (
                  <div class="whatsapp-section">
                    <a href={group.data.whatsappLink} target="_blank" rel="noopener noreferrer" class="whatsapp-btn">
                      <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                      </svg>
                      Join on WhatsApp
                    </a>
                    <div class="qr-code">
                      <img 
                        src={`https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(group.data.whatsappLink)}`} 
                        alt="Scan to join WhatsApp group"
                        width="150"
                        height="150"
                      />
                      <span>Scan to join</span>
                    </div>
                  </div>
                )}
                {group.data.howToJoin && <p class="join-notes">{group.data.howToJoin}</p>}
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>

<style>
  .page-header {
    text-align: center;
    padding: 3rem 0;
    background: linear-gradient(to bottom, var(--white), var(--cream));
  }

  .page-header h1 {
    font-size: 2.2rem;
    margin-bottom: 0.75rem;
  }

  .page-header p {
    color: var(--gray);
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
  }

  .groups-section {
    padding: 2rem 0 4rem;
  }

  .groups-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .group-card {
    padding: 2rem;
  }

  .group-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .group-header h2 {
    color: var(--blue);
    margin: 0;
  }

  .age-badge {
    background: var(--green);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.85rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .group-description {
    color: var(--gray-dark);
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .group-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--gray-light);
    border-radius: 0.5rem;
  }

  .detail {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .detail-icon {
    font-size: 1.1rem;
  }

  .next-meetup {
    background: linear-gradient(135deg, var(--yellow) 0%, #FFE082 100%);
    padding: 1rem 1.25rem;
    border-radius: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .next-meetup h3 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gray-dark);
    margin-bottom: 0.25rem;
  }

  .meetup-date {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--black);
  }

  .meetup-notes {
    margin-top: 0.5rem;
    color: var(--gray-dark);
    font-style: italic;
  }

  .group-join {
    border-top: 1px solid var(--gray-light);
    padding-top: 1.25rem;
  }

  .group-join h3 {
    font-size: 1rem;
    color: var(--orange);
    margin-bottom: 0.75rem;
  }

  .whatsapp-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .whatsapp-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #25D366;
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 2rem;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s;
  }

  .whatsapp-btn:hover {
    background: #1da851;
    text-decoration: none;
  }

  .qr-code {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .qr-code img {
    border-radius: 0.5rem;
    border: 2px solid var(--gray-light);
  }

  .qr-code span {
    font-size: 0.8rem;
    color: var(--gray);
  }

  @media (min-width: 768px) {
    .qr-code {
      display: flex;
    }
  }

  .join-notes {
    color: var(--gray);
    margin-top: 0.75rem;
  }

  .no-groups {
    text-align: center;
    color: var(--gray);
    padding: 3rem;
  }
</style>
